
#include <stdio.h>
int main()
{
    int number; //this will create a number integar.

    printf("Enter an integer: ");
    scanf("%d", &number); //this will take input from the user

    // True if the number is perfectly divisible by 2
    if(number % 2 == 0)
        printf("%d is even.", number);
    else
        printf("%d is odd.", number);

    return 0;
}
